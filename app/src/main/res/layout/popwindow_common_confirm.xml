<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6e000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center"
        android:background="@drawable/design_background_withe"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/common_popwindow_confirm_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginBottom="@dimen/dip15"
                    android:layout_marginTop="@dimen/dip15"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5sp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip20"
                android:layout_marginRight="@dimen/dip20"
                android:layout_marginTop="@dimen/dip10"
                android:gravity="top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/common_popwindow_confirm_content"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dip50"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginBottom="@dimen/dip7"
                    android:layout_marginLeft="@dimen/dip5"
                    android:layout_marginTop="@dimen/dip2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.5sp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/common_popwindow_confirm_cancel_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginBottom="@dimen/dip12"
                        android:layout_marginLeft="@dimen/dip45"
                        android:layout_marginRight="@dimen/dip45"
                        android:layout_marginTop="@dimen/dip12"
                        android:gravity="center"
                        android:text="@string/popwindow_common_cancel"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="0.5sp"
                    android:layout_height="fill_parent"
                    android:background="@color/black" />

                <LinearLayout
                    android:id="@+id/common_popwindow_confirm_ok_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginBottom="@dimen/dip12"
                        android:layout_marginLeft="@dimen/dip45"
                        android:layout_marginRight="@dimen/dip45"
                        android:layout_marginTop="@dimen/dip12"
                        android:gravity="center"
                        android:text="@string/popwindow_common_ok"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>