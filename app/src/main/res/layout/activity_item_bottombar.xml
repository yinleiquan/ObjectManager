<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|center_horizontal"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dip53"
        android:layout_gravity="center"
        android:id="@+id/ll_id"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/bottom_ico"
            android:layout_width="@dimen/dip25"
            android:layout_height="@dimen/dip25"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/bottom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip1"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dip5"
            android:textColor="@drawable/bottombar_text_color_selector"
            android:textSize="10sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/tips_v"
        android:layout_width="@dimen/dip5"
        android:layout_height="@dimen/dip5"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/ll_id"
        android:layout_marginLeft="@dimen/dip2"
        android:background="@drawable/msg_tips"
        android:contentDescription="@string/app_name"
        android:visibility="invisible" />

</RelativeLayout>