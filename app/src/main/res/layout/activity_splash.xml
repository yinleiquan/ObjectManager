<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_splash_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_page02"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dip25">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/gray_8f"
            android:textSize="12sp"
            android:text="@string/company_copyright_des"/>
    </LinearLayout>
    <TextView
        android:id="@+id/splash_timer"
        android:layout_width="@dimen/dip50"
        android:layout_height="@dimen/dip25"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dip5"
        android:background="#60000000"/>
</RelativeLayout>