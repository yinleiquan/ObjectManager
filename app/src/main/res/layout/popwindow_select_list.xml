<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6e000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginBottom="@dimen/dip150"
        android:layout_marginLeft="@dimen/dip50"
        android:layout_marginRight="@dimen/dip50"
        android:layout_marginTop="@dimen/dip150"
        android:background="@drawable/design_background_withe"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/popwindow_select_list_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginBottom="@dimen/dip13"
                    android:layout_marginLeft="@dimen/dip25"
                    android:layout_marginTop="@dimen/dip13"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="0.5sp"
                android:layout_height="match_parent"
                android:background="@color/darkgray" />

            <LinearLayout
                android:id="@+id/popwindow_select_list_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dip50"
                    android:layout_height="@dimen/dip30"
                    android:src="@drawable/cancel" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.5sp"
            android:background="@color/darkgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/branch_company_select_station_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/list_item_divider"
                android:dividerHeight="1dip"
                android:layout_marginBottom="@dimen/dip7" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>